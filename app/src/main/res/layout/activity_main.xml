<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/principal"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:id="@+id/layoutContenedor"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="35dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="20dp"
            android:background="@drawable/background_btn_login"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jetbrains_mono_semibold"
                    android:text="Acceso"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/principal"
                    android:textSize="40dp"></TextView>

                <EditText
                    android:id="@+id/etUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/background_edit_text"
                    android:fontFamily="@font/jetbrains_mono_semibold"
                    android:hint="Usuario"
                    android:text="12345"
                    android:textAlignment="center"
                    android:textColor="@color/principal"
                    android:textSize="25dp"></EditText>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <EditText
                        android:id="@+id/etcontrasena"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/background_edit_text"
                        android:fontFamily="@font/jetbrains_mono_semibold"
                        android:hint="ContraseÃ±a"
                        android:inputType="textPassword"
                        android:text="12345"
                        android:textAlignment="center"
                        android:textColor="@color/principal"
                        android:textSize="25dp" />

                    <ImageButton
                        android:visibility="gone"
                        android:layout_marginRight="20dp"
                        android:background="#80FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/show_pass_0"
                        android:id="@+id/showPass"
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>




                <CheckBox
                    android:fontFamily="@font/jetbrains_mono_semibold"
                    android:buttonTint="@color/principal"
                    android:id="@+id/recordarCB"
                    android:textColor="@color/principal"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Recordar Usuario"
                    ></CheckBox>

                <Button
                    android:enabled="false"
                    android:id="@+id/btnEntrar"
                    android:layout_width="200dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_btn_login"
                    android:fontFamily="@font/jetbrains_mono_semibold"
                    android:text="Entrar"
                    android:textColor="@color/white"
                    android:textSize="20dp"></Button>

                <Button
                    android:id="@+id/btnSalir"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_btn_login"
                    android:fontFamily="@font/jetbrains_mono_semibold"
                    android:text="Salir"
                    android:textColor="@color/white"
                    android:textSize="20dp"></Button>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
